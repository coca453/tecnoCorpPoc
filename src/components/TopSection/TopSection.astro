---
export interface Props {
  title: string;
  description: string;
  topTitle: string;
}

const { description, title, topTitle } = Astro.props;
---

<div class="px-6 py-24 sm:py-32 lg:px-8">
  <div class="mx-auto max-w-2xl text-center">
    <p class="text-base/7 font-semibold text-indigo-700">
      {topTitle}
    </p>
    <h2
      class="mt-2 text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl"
    >
      {title}
    </h2>
    <p
      class="mt-8 text-pretty text-lg font-medium text-gray-600 sm:text-xl/8 text-justify"
    >
      {description}
    </p>
  </div>
</div>
