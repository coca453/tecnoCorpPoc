---
import "../style/global.css";
import { NavBar } from "../components/NavBar/NavBar";
import Footer from "../components/Footer/Footer.astro";

import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;
console.log(Astro.generator);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta name="description" content="test" />
    <ViewTransitions />
    <meta
      name="description"
      content="TECNA CORP: Holding especializado en Tecnología, Ingeniería, Puesta en Marcha y Operación y Mantenimiento en los sectores de Oil & Gas, Minería y Energía, con más de 20 años de experiencia en Latinoamérica."
    />
    <meta
      name="keywords"
      content="TECNA CORP, Ingeniería, Oil & Gas, Minería, Energía, Puesta en Marcha, Operación y Mantenimiento, Proyectos Llave en Mano, Plantas Modulares, Automatización y Control"
    />
    <meta name="author" content="TECNA CORP" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph Metadata -->
    <meta
      property="og:title"
      content="TECNA CORP: Líder en Ingeniería y Proyectos Industriales"
    />
    <meta
      property="og:description"
      content="TECNA CORP ofrece soluciones integrales en Ingeniería, Puesta en Marcha, Operación y Mantenimiento para los sectores de Oil & Gas, Minería y Energía."
    />
