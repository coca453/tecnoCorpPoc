---
import Layout from "../layouts/Layout.astro";

const items = [
  "INGENIERÍA",
  "PLANTAS LLAVE EN MANO",
  "PLANTAS MODULARES",
  "GERENCIAMIENTO DE PROYECTOS",
  "INSPECCIÓN / FISCALIZACIÓN DE PROYECTOS",
  "AUTOMATIZACIÓN Y CONTROL",
  "OPERACIÓN Y MANTENIMIENTO",
];
---

<Layout title="Welcome to Astro.">
  <main class="text-white">
    <div class="relative w-full h-full">
      <img
        src="/assets/img/home.webp"
        alt=""
        class="w-full h-full object-cover absolute mix-blend-overlay object-bottom"
      />
      <div class="flex">
        <div
          class="animate-slideIn py-10 md:py-36 md:pr-40 lg:py-52 lg:pr-[50rem]"
        >
          <h2 class="text-2xl p-16 md:text-4xl">
            <span> TECNA Corp. </span>
            nos especializamos en la ejecución de proyectos en el sector Oil&Gas
            y Energía.
          </h2>
        </div>
      </div>
    </div>
  </main>
</Layout>
